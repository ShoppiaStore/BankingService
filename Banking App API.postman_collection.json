	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register Account",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Note: If register returns 401, use Login endpoint separately",
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('auth_token', response.token);",
									"    pm.environment.set('user_id', response.id);",
									"    pm.environment.set('user_email', response.email);",
									"    console.log('Registration successful, token saved');",
									"} else if (pm.response.code === 401) {",
									"    console.log('Registration created user but auto-login failed. Use Login endpoint manually.');",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Ahmed Mohamed\",\n    \"email\": \"ahmed@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": "{{base_url}}/rest/auth/register",
						"description": "Register a new account in the banking system"
					},
					"response": []
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('auth_token', response.token);",
									"    pm.environment.set('user_id', response.id);",
									"    pm.environment.set('user_email', response.email);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"ahmed@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": "{{base_url}}/rest/auth/authenticate",
						"description": "Authenticate user and get JWT token"
					},
					"response": []
				},
				{
					"name": "Test Hello Endpoint",
					"request": {
						"method": "GET",
						"header": [],
						"url": "{{base_url}}/rest/auth/hello",
						"description": "Test endpoint to verify API is working"
					},
					"response": []
				}
			],
			"description": "Authentication related endpoints"
		},
